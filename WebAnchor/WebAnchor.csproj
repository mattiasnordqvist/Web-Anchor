<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net461;net462;net47</TargetFrameworks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>
  <PropertyGroup>
    <PackageVersion>6.5.0</PackageVersion>
    <PackageId>WebAnchor</PackageId>
    <Title>WebAnchor</Title>
    <Authors>mattiasnordqvist;carl_berg</Authors>
    <Description>A type-safe .NET-library for consuming web APIs</Description>
    <Copyright>Copyright © Spinit AB, Mattias Nordqvist, Carl Berg and contributors 2017</Copyright>
    <PackageLicenseUrl>https://raw.githubusercontent.com/mattiasnordqvist/web-anchor/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/mattiasnordqvist/Web-Anchor</PackageProjectUrl>
    <RepositoryUrl>https://github.com/mattiasnordqvist/Web-Anchor.git</RepositoryUrl>
    <PackageIconUrl>https://github.com/mattiasnordqvist/Web-Anchor/raw/master/logo.png</PackageIconUrl>
    <PackageTags>REST HTTP API JSON</PackageTags>
    <PackageReleaseNotes>Added analyzer dependency</PackageReleaseNotes>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="..\ProductAssemblyInfo.cs" Link="Properties\ProductAssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Castle.Core" Version="4.2.1" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
    <PackageReference Include="System.Net.Http" Version="4.3.3" />
    <PackageReference Include="WebAnchor.Analyzers" Version="0.1.0" />
  </ItemGroup>
  
</Project>